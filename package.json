{
  "name": "git-repo-clone",
  "version": "0.1.0",
  "description": "git clone",
  "main": "src/index.js",
  "repository": "git@github.com:darkXmo/git-repo-clone.git",
  "author": "Xmo <18851989097@163.com>",
  "license": "MIT",
  "module": "module",
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.0",
    "jest": "^27.2.4",
    "lint-staged": "^11.1.2",
    "prettier": "2.4.1"
  },
  "lint-staged": {
    "src/**/*.vue": [
      "eslint --fix",
      "prettier --write --ignore-unknown"
    ],
    "src/**/*.js": [
      "eslint --fix",
      "prettier --write --ignore-unknown"
    ],
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write --ignore-unknown"
    ],
    "*.{js,ts,css,md}": "prettier --write --ignore-unknown"
  },
  "scripts": {
    "lint:eslint": "eslint --cache --max-warnings 0  \"{src}/**/*.{vue,js,ts,jsx,tsx}\" --fix",
    "commit": "git add . && cz",
    "prepare": "husky install",
    "test": "echo \"no specific test\""
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  }
}
